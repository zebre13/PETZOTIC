<br>

<div class="container pet-show">
<br>
  <div class="show_center">
  <h1> <%= @pet.name %> </h1></div>

  <div class="row">
      <div class="col-md-4">
          <div class="well-titre" style="background-image: url(<%= cl_image_path @pet.photos.first.key %>); background-size: cover">

          </div>
      </div>
      <div class="col-md-8">
        <%= @pet.photos[1..].each_slice(2) do |photo_1, photo_2|%>
          <div class="row">
              <div class="col-md-6">
                  <div class="well mb-2" style="background-image: url('<%= cl_image_path photo_1.key %>'); background-size: cover;"></div>
              </div>
              <div class="col-md-6">
                  <div class="well" style="background-image: url('<%= cl_image_path photo_2.key %>'); background-size: cover;"></div>
              </div>
          </div>
        <% end %>
      </div>
  </div>
  <br>
  <br>

  <h2><%= @pet.category  %></h2>
  <br>

  <p><%= @pet.description  %></p>
  <p><%= @pet.specie %></p>

  <%= render 'bookings/form' %>

  <%= link_to 'Back to list', root_path, class: "btn btn-primary" %>
</div>
