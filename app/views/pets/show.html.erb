<br>

<div class="container pet-show">
<br>
  <div class="show_center">
  <h1> <%= @pet.name %> </h1></div>

  <div class="row">
      <div class="col-md-6">
      <% if @pet.photos.any? %>
          <div class="well-titre"> <%=  cl_image_tag @pet.photos.first&.key %>
      <% end %>
          </div>
      </div>
      <div class="col-md-6">

        <%= @pet.photos[1..].each_slice(2) do |photo_1, photo_2|%>
          <div class="row">
              <div class="col-md-6">
                  <div class="well mb-2" style="background-image: url('<%= cl_image_path photo_1.key %>'); background-size: cover;"></div>
              </div>
              <div class="col-md-6">
                  <div class="well" style="background-image: url('<%= cl_image_path photo_2.key %>'); background-size: cover;"></div>
              </div>
          </div>
        <% end %>
      </div>
  </div>
  <br>
  <br>

<div class="container w-75">
  <div class="prix ">
    <h2><%= @pet.category.capitalize  %> | <%= @pet.specie %></h2>
        <p><strong>â‚¬<%= @pet.price %></strong> / day</p>
    </div>
    <br>

    <p><%= @pet.description  %></p>


    <% if @user == @pet.user %>
      <h5 class="text-secondary">This is your pet</h1>
    <% else %>
      <%= render 'bookings/form' %>
    <% end %>

    <%= link_to 'Back to list', pets_path, class: "btn btn-primary" %>

    <% if policy(@pet).edit? %>
      <%= link_to 'Edit this pet', edit_pet_path(@pet), class: "btn btn-primary" %>
    <% end %>

    <%= pluralize @pet.reviews.size, "review" %>
    <div id="reviews">
      <% if @pet.reviews.blank? %>
        Be the first to leave a review for <%= @pet.name %>
      <% else %>
        <% @pet.reviews.each do |review| %>
          <p><%= review.content %></p>
        <% end %>
      <% end %>
    </div>

    <%= simple_form_for([ @pet, @review ]) do |f| %>
      <%= f.input :content, as: :text %>
      <%= f.input :rating %>
      <%= f.button :submit %>
    <% end %>
    <%# if policy(@pet).destroy? %>
      <%#= link_to "Remove",
                      pet_path(@pet),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %>
    <%# end %>
  </div>
</div>
