<h1>Meet our pets!</h1>
<p>Find me in app/views/pets/index.html.erb</p>

<div class="content">
  <div class="cards">
    <div class="card-pet">
      <div class="card-img">
        <%= image_tag "lion.jpg" %>
      </div>
      <div class="card-pet-info">
        <div>
          Wildcats | Lion
        </div>
        <div>
          <h1>Simba</h1>
        </div>
      <div>
          <p>
          Lorem ipsum dolor sit amet. Qui sunt deserunt qui saepe nisi sed repellat incidunt eos laboriosam molestias id aliquid culpa.
          </p>
        </div>
        <div class="text-end">
          <strong>10,000 €</strong> / day
        </div>
      </div>
    </div>
    <% @pets.each do |pet| %>
      <div class="card-pet">
        <div class="card-img">
          <%= pet.photos %>
        </div>
        <div class="card-pet-info">
          <div>
            <%= pet.category %> | <%= pet.specie %>
          </div>
          <div>
            <h1><%= pet.name %></h1>
          </div>
          <div>
            <p><%= pet.description %></p>
          </div>
          <div class="text-end">
            <p><strong><%= pet.price %> €</strong> / day</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map">
    # TODO: Map setup
  </div>
</div>
